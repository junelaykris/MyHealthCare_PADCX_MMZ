<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvRecentDoctor"
    android:layout_width="130dp"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    android:elevation="@dimen/margin_card_medium"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_2x"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivDoctorProfile"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:padding="@dimen/margin_card_medium"
            android:scaleType="fitXY"
            android:src="@drawable/userprofile" />

        <org.mmtextview.components.MMTextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/regular_text_size" />

        <org.mmtextview.components.MMTextView
            android:id="@+id/txtSpeciality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="အရေပြားနှင့် အလှပရေးရာ"
            android:textColor="@color/black"
            android:textSize="@dimen/regular_text_size" />
    </LinearLayout>
</androidx.cardview.widget.CardView>